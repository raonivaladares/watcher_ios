  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for NetworkPlataform
  pod 'Alamofire', '~> 5.0.0-beta.5'
	pod 'SwiftyJSON'

  target 'NetworkPlataformTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

end

